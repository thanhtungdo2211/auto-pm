# Dockerfile.agent
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Expose ports (will be overridden)
EXPOSE 8001 8002

# Health check (will be customized per service)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || curl -f http://localhost:8002/health || exit 1

# Default command (will be overridden in docker-compose)
CMD ["uvicorn", "agents.asign_task_agent:app", "--host", "0.0.0.0", "--port", "8001"]